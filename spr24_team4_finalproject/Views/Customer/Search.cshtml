@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Search Customers";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SearchResults" method="post">
    <div class="form-group">
        <label for="searchString">Search by Name or Advantage Number:</label>
        <input type="text" class="form-control" id="searchString" name="searchString" required>
        <input class="form-check-input" type="checkbox" id="searchByAdvantageNumber" name="searchByAdvantageNumber" value="true">
        <label class="form-check-label" for="searchByAdvantageNumber">
            Search by Advantage Number
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Advantage Number</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.AdvNumber</td>
                <td>
                    <a asp-controller="Customer" asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
