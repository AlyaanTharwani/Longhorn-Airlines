@model spr24_team4_finalproject.Models.Tickets

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tickets</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeatNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeatNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscountType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MilesEarned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MilesEarned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModificationFee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModificationFee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightsID)
        </dd>
    </dl>
</div>
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Manager"))
    {
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.TicketsID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    }
}
else
{
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}