@model spr24_team4_finalproject.Models.Tickets

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tickets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <select asp-for="SeatNumber" asp-items="Html.GetEnumSelectList<Seats>()" class="form-control"></select>
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Reservation</label>
                @Html.DropDownList("SelectedReservations", (SelectList)ViewBag.AllReservations, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">All Customers:</label>
                @Html.DropDownList("SelectedCustomer", (SelectList)@ViewBag.AllUsers, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Flights</label>
                @Html.DropDownList("SelectedFlights", (SelectList)ViewBag.AllFlights, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>